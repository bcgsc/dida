CXX=g++
CPPFLAGS=-c
OPTFLAGS=-O3
LIBPATH=-ICommon
LDFLAGS=-fopenmp

EXEC1=prt
EXEC2=dsp
EXEC3=mrg

all: $(EXEC1) $(EXEC2) $(EXEC3)

SRCS1=prt.cpp
SRCS2=dsp.cpp Common/HashManager.cpp Common/BloomFilter.cpp Common/city.cc
SRCS3=mrg.cpp

$(EXEC1):$(SRCS1)
	$(CXX) $(OPTFLAGS) -o $@ $^

$(EXEC2):$(SRCS2)
	$(CXX) $(OPTFLAGS) $(LDFLAGS) $(LIBPATH) -o $@ $^

$(EXEC3):$(SRCS3)
	$(CXX) $(OPTFLAGS) -o $@ $^ 

clean:
	rm -rf *.o

cleanest: clean
	rm -rf $(EXEC1) $(EXEC2)
